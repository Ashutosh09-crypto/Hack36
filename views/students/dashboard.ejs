<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/css/studentDashboard.css">

    <style>
        * {
    box-sizing: border-box;
    padding: 0;
    margin: 0
}


.progress {
    width: 200px;
    height: 200px;
    font-size: 30px;
    color: #fff;
    border-radius: 50%;
    overflow: hidden;
    position: relative;
    background: #171730;
    text-align: center;
    line-height: 200px;
    margin: -200px 200px;
}

.progress::after {content: "ðŸŒŸ";}

.progress .title {position: relative;z-index: 100;}

.progress .overlay {
    width: 50%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    background-color: #171730;
}

.progress .left, .progress .right {
    width: 50%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    border: 10px solid #b2c071;
    border-radius: 100px 0px 0px 100px;
    border-right: 0;
    transform-origin: right;
}

.progress .left {animation: load1 1s linear forwards;}

.progress:nth-of-type(2) .right, .progress:nth-of-type(3) .right {animation: load2 .5s linear forwards 1s;}

.progress:last-of-type .right, .progress:first-of-type .right {animation: load3 .8s linear forwards 1s;}

@keyframes load1 {
    0% {transform: rotate(0deg);}

    100% {transform: rotate(180deg);}
}

@keyframes load2 {
    0% {z-index: 100;transform: rotate(180deg);}

    100% {z-index: 100;transform: rotate(270deg);}
}

@keyframes load3 {
    0% {z-index: 100;transform: rotate(180deg);}

    100% {
        z-index: 100;transform: rotate(210deg);}
}
    </style>
</head>

<body>

    <main class="main">
        <aside class="sidebar">
            <nav class="nav">
                <ul>
                    <li class="entries active"><a href="#">Dashboard</a></li>
                    <li class="entries"><a href="#">Students</a></li>
                    <li class="entries"><a href="#">Tasks</a></li>
                    <li class="entries"><a href="#">Activity</a></li>
                    <li class="entries"><a href="#">Forum</a></li>
                </ul>
            </nav>
        </aside>

        <section class="twitter">
            <div class="container" id="wrapper">
                <div class="show" id="Dashboard"><h1 style="font-size: 4rem; margin-top: -20rem;">Hi' ðŸ˜Š <%=student.name%></h1> </div>
                
                <div class="" >
                    <div class="progress" >
                        <span class="title timer" data-from="0" data-to="100" data-speed="1800" id="circle">
                            <% student.xp.forEach(e => { %>
                                <% if (e.subjectName === teacher.subject) { %>
                                    <%= e.Xp %> 
                                <% } %>

                        <% }) %>
                        </span>
                        <div class="overlay"></div>
                        <div class="left"></div>
                        <div class="right"></div>
                    </div>
                </div>

                <div class="hidden" id="Students">
                    <% for(let x=0;x<allStudents.length;x++){ %>
                        <p>
                            <b>
                                <%=x+1 %>.
                            </b>
                            <%= allStudents[x].name %>
                        </p>
                        <% } %>
                </div>
                <div class="hidden" id="Tasks">
                    <% for(let x=0;x<tasks.length;x++){ %>
                        <p>
                            <b>
                                <%=x+1 %>.
                            </b>
                            <%= tasks[x].taskName %>
                        </p>
                        <% } %>
                </div>
                <div class="hidden" id="Activity">For Activity Status</div>
                <div class="hidden" id="Forum">For Forum</div>
            </div>
        </section>
    </main>



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- <script src="/js/studentDashboard.js"></script> -->

    <script>
        $('.entries').on('click', function (e) {
            let id = $(this).text();
            id = "#" + id;
            if ($(id).hasClass('hidden')) {
                $('.show').addClass('hidden');
                $('.show').removeClass('show');
                $(id).removeClass('hidden');
                $(id).addClass('show');
            }
            $('.active').removeClass('active');
            $(this).addClass('active');
        })
    </script>
</body>

</html>